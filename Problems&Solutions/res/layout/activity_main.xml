            android:layout_alignParentRight="true" 
            android:src="@drawable/settings" /> -->
<ImageView
            android:id="@+id/AddP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
           android:layout_alignParentRight="true" 
            android:onClick="onClick"
          android:background="@drawable/plus_button"  />
        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/AddP"
            android:onClick="onClick"
            android:src="@drawable/searchimg" />
    </RelativeLayout>
<RelativeLayout
     android:id="@+id/SearchLayout"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" 
        android:visibility="gone"
    >
     <EditText
        android:id="@+id/SearchField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10" 
         
        android:hint="Search...">

        <requestFocus />
    </EditText>

     <ImageView
         android:id="@+id/CancelSearch"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="5dp"
         android:onClick="onClick"
         android:src="@drawable/thex" />

</RelativeLayout>
   

    <LinearLayout
        android:id="@+id/addproblayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/layout_border"
        android:visibility="gone">

        
<RelativeLayout
     android:id="@+id/editProbLayout"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#ffffff" 
    >
  <EditText
            android:id="@+id/editProb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             
            android:minHeight="50dp"
            android:ems="10"
            android:paddingRight="30dp"
             android:hint="The problem..."
            android:inputType="textMultiLine|textCapSentences" />

     <ImageView
         android:id="@+id/Voice"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="5dp"
         android:onClick="onClick"
         android:src="@drawable/micro" />

</RelativeLayout>
       
 <LinearLayout
     android:id="@+id/layoutOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

     <ImageView
         android:id="@+id/imgWarning"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_weight="0.33"
         android:onClick="onClick"
         android:src="@drawable/nopriority" />

     <ImageView
         android:id="@+id/imgDate"
          android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_weight="0.33"
         android:onClick="onClick"
         android:src="@drawable/calendaroff" />

     <ImageView
         android:id="@+id/imgCat"
          android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_weight="0.33"
         android:onClick="onClick"
         android:src="@drawable/tagoff" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/SaveBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:background="#ffffff"
                android:textColor="@color/blue"
             android:layout_margin="4dp"
             android:onClick="onClick"
                android:text="Save" />

            <Button
                android:id="@+id/CancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                 android:layout_margin="4dp"
                android:background="#ffffff"
                android:textColor="@color/blue"
                android:onClick="onClick"
                android:text="Cancel" />

        </LinearLayout>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/ProblemsList"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:listSelector="@android:color/white"
        android:groupIndicator="@drawable/group_indicator"
android:dividerHeight="0dp" >
    </ExpandableListView>
      </LinearLayout>
       <FrameLayout
        android:id="@+id/layoutMainSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout> 
     <FrameLayout
        android:id="@+id/layoutMainSolution"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>    
</RelativeLayout>



